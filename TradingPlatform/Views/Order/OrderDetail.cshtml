            <!-- MAIN CONTENT -->
            <div class="main-content">
                <div class="container-fluid">
                    <h3 class="page-title">My Account</h3>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="panel">
                                <div class="panel-heading">
                                    <div>
                                        <h3>Order History</h3>
                                    </div>
                                    <div class="right">
                                        <div class="col-sm-3" style="float:right">
                                            <form class="input-group">
                                                <input type="text" class="form-control" placeholder="Search"/>
                                                <span class="input-group-addon"><i class="glyphicon glyphicon-search"></i></span>
                                            </form>                     
                                        </div>
                                        <div style="float:right;">
                                            <select class="form-control">
                                                <option value="1">Five days</option>
                                                <option value="2">Ten days</option>
                                                <option value="3">One month</option>
                                                <option value="4">two months</option>
                                                <option value="5">one year</option>
                                            </select>
                                        </div>
                                    </div>


                                </div>
                                <div class="panel-body clear_float">
                                    <table class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th type="number">Order No.</th>
                                                <th type="number">Trader</th>
                                                <th type="string">Symbol</th>
                                                <th type="string">Order Type</th>
                                                <th type="number">Price</th>
                                                <th type="number">QTY</th>
                                                <th type="string">Side</th>
                                                <th type="string">Time</th>
                                                @*<th type="string">Status</th>*@
                                                <th>Detail</th>
                                            </tr>
                                        </thead>
                                        <tbody>

                                            <tr>
                                                @{ 
                                                    string symbol = new OrderBookService().FindOrderBookById(execution.Order.OrderBookId).Symbol;
                                                    string strategyName = new StrategyService().FindStrategyById(execution.Order.StrategyId).Name;

                                                }
                                                <td>@execution.Order.Id</td>
                                                <td>@execution.Order.Trader.Name</td>
                                                <td>@symbol</td>
                                                <td>@strategyName</td>
                                                <td>@execution.Order.Price</td>
                                                <td>@execution.Order.Quantity</td>

                                                @if (@execution.Order.IsBuy == true)
                                                {
                                                    <td>Buy</td>
                                                }
                                                @if (@execution.Order.IsBuy == false)
                                                {
                                                    <td>Offer</td>
                                                }
                                                <td>@execution.Order.DateTime</td>
                                                @*@if ()
                                                {
                                                    <td>need change</td>
                                                }
                                                else
                                                {
                                                    <td>need change</td>
                                                }*@
                                                <td><a class="btn btn-xs active" vertical-align="center" role="button" data-toggle="collapse" href="#@execution.Order.Id" aria-expanded="false" aria-controls="collapseExample">details</a></td>
                                            </tr>
                                                <tr>
                                                    <td colspan="10">
                                                        <div class="collapse" id="@execution.Order.Id" width="60%" align="center">
                                                            <div class="well">
                                                                <table class="table table-bordered no-padding" align="center" style="width: 80%">
                                                                    <thead>
                                                                        <tr>
                                                                            <th>Price</th>
                                                                            <th>Amount</th>
                                                                            <th>Status</th>
                                                                        </tr>
                                                                    </thead>
                                                                    <tbody>
                                                                        @foreach (Trade trade in execution.Trades)
                                                                        {
                                                                            <tr>
                                                                                <td>@trade.Price</td>
                                                                                <td>@trade.Quantity</td>
                                                                                @if (@trade.IsSuccess)
                                                                                {
                                                                                    <td>Completed</td>
                                                                                }
                                                                                else
                                                                                {
                                                                                    <td>Rejected</td>
                                                                                }
                                                                            </tr>

                                                                        }                                                                  
                                                                    </tbody>
                                                                </table>
                                                            </div>
                                                        </div>
                                                    </td>
                                                </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>

