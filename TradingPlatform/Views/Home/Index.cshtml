                    <div class="row">

                        <!-- Order Book展示-->
                        <div class="col-md-8">
                            <div class="panel">
                                <div class="panel-heading">
                                    <h3 class="panel-title">Order Book</h3>
                                    <h4 id="stock-type">--abt</h4>
                                    <div class="right">
                                        <button type="button" class="btn-toggle-collapse"><i class="lnr lnr-chevron-up"></i></button>
                                    </div>
                                </div>
                                <div class="panel-body no-padding">

                                    <table class="table table-striped" id="orderBookList">
                                        <thead>
                                            <tr>
                                                <th type="number">Id</th>
                                                <th type="string">Symbol</th>
                                                <th type="string">Side</th>
                                                <th type="number">Price</th>
                                                <th type="number">Quantity</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (OrderBook orderBook in ViewData["orderBooks"] as List<OrderBook>)
                                            {
                                                <tr>
                                                    <td>@orderBook.Id</td>
                                                    <td>@orderBook.Symbol</td>
                                                        @if (@orderBook.IsBit)
                                                        {
                                                            <td>Bit</td>
                                                        } else
                                                        {
                                                            <td>Offer</td>
                                                        }
                                                    <td>@orderBook.Price</td>
                                                    <td>@orderBook.Quantity</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                                <div class="panel-footer">
                                    <div class="row">                          

                                        <div class="col-md-6"><span class="panel-note"><i class="fa fa-clock-o"></i> Last 24 hours</span></div>
                                        <div class="col-md-6 text-right"><a href="#" class="btn btn-primary">View All Purchases</a></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- END Order Book展示-->
                        <!-- My Monitors展示 -->
